<?xml version="1.0" encoding="utf-8"?>
<odoo> 
        <!--Display form view of wizard-->    
        <record id="view_create_invoice_wizard_form" model="ir.ui.view">
            <field name="name">create.invoice.wizard.form</field>
            <field name="model">create.invoice.wizard</field>
            <field name="arch" type="xml">
                <form string="Create Draft Invoice">
                    <group>
                      <group>
                          <field name="journal_id" />
                          <field name="invoice_date" />
                      </group>
                      <group>
                         
                        <field name="picking_ids"   widget='many2many_tags' invisible="1"/>  
                      </group>
                        
                    </group>
                    <footer>
                        <button string='Create Bill' name="action_create_bill" type="object" default_focus="1" class="oe_highlight"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!--Open the wizard on click of menu-->
        <record id="open_create_invoice_wizard_action" model="ir.actions.act_window">
            <field name="name">Create Bill</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">create.invoice.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <!-- TODO: check if we need this -->
            <field name="binding_model_id" ref="stock.model_stock_picking" />
            <field name="binding_view_types">list</field>
        </record>


</odoo>
